<?xml version="1.0" encoding="UTF-8"?>

<ResourceDictionary x:Class="DemoCenter.Maui.Resources.Styles.LightTheme"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="BackgroundThemeColor" x:Uid="Neutral-100">#FFFFFF</Color>
    <Color x:Key="NavigationBarColor" x:Uid="Neutral-100">#FFFFFF</Color>
    <Color x:Key="AccentColor" x:Uid="Primary-40">#6750A4</Color>
    <Color x:Key="SeparatorColor" x:Uid="NeutralVariant-80">#CAC4D0</Color>
    <Color x:Key="DividerColor" x:Uid="NeutralVariant-90">#E7E0EC</Color>
    <Color x:Key="TextThemeColor" x:Uid="Neutral-10">#1C1B1F</Color>
    <Color x:Key="DemoHamburgerIconColor" x:Uid="NeutralVariant-30">#49454F</Color>
    <Color x:Key="SecondaryTextColor" x:Uid="NeutralVariant-30">#49454F</Color>
    <Color x:Key="NavigationTextColor" x:Uid="Neutral-10">#1C1B1F</Color>

   
    <Color x:Key="NestedTabViewFavoriteColorNestedTabViewFavoriteColor">#de6d6f</Color>
    <Color x:Key="NestedTabViewCartColor">#27b24f</Color>
    <Color x:Key="ReminderButtonBackgroundColor">#2088FF</Color>
    

    
    <Color x:Key="AvatarBorderColor">Transparent</Color>
    <Color x:Key="SliderMaximumTrackColor-iOS" x:Uid="NeutralVariant-90">#E7E0EC</Color>

    <Color x:Key="CardViewBackgroundColor" x:Uid="SurfaceLight-3">#F3EDF7</Color>
    <Color x:Key="CardViewHeaderColor" x:Uid="NeutralVariant-90">#E7E0EC</Color>
    
    <Color x:Key="BadgeThemeColor">#75A450</Color>

    

    
    <Color x:Key="GridCellFontColor" x:Uid="Neutral-10">#1C1B1F</Color>
    <Color x:Key="GridHorizontalVirtualizationQuarterBarColor">#FFB1C3FF</Color>
    <Color x:Key="GridHorizontalVirtualizationYearBarColor">Pink</Color>

    
    <Color x:Key="CalendarDemoBackgroundColor" x:Uid="SurfaceLight-4">#EEE8F4</Color>
    <Color x:Key="CalendarSpecialDatesSeparatorColor" x:Uid="NeutralVariant-80">#CAC4D0</Color>
    <Color x:Key="CalendarSpecialDatesHolidayTextColor">#B3261E</Color>
    <Color x:Key="CalendarSpecialDatesHolidayBackgroundColor">#EFCDCB</Color>
    <Color x:Key="CalendarInfoPanelTitleColor" x:Uid="NeutralVariant-30">#49454F</Color>
    <Color x:Key="CalendarSpecialDatesTextColor" x:Uid="NeutralVariant-30">#49454F</Color>
    <Color x:Key="CalendarSpecialDatesBackgroundColor">#1A000000</Color>

    
    <Color x:Key="ChartsTabButtonSelectedBackgroundColor">#ffffff</Color>
    <Color x:Key="ChartsTabButtonBackgroundColor">#f9f9f9</Color>
    <Color x:Key="ChartsTabButtonBorderColor">#ebebeb</Color>

    
    <Color x:Key="PhoneListTabTextColor">#55575c</Color>
    <Color x:Key="PhoneListTabIconColor">#7c8086</Color>
    <Color x:Key="PhoneThemeColor">#959aa0</Color>

    
    <Color x:Key="DrawerTopPanelBorderColor">#dfe5ed</Color>

    
    <Color x:Key="EditorSettingsSeparatorColor" x:Uid="NeutralVariant-80">#CAC4D0</Color>
    <Color x:Key="EditorSettingsTextColor">#de000000</Color>

    
    <Color x:Key="ChoiceChipGroupChipTextColor">#505050</Color>
    <Color x:Key="ChoiceChipGroupChipBorderColor">#E5E5E1</Color>
    <Color x:Key="ChoiceChipGroupChipPressedBorderColor">#F5F5F1</Color>
    <Color x:Key="ChoiceChipGroupChipSelectedBackgroundColor">#DFD8F7</Color>
    <Color x:Key="ChoiceChipGroupChipPressedBackgroundColor">#CFC8E7</Color>

    
    <Color x:Key="CollectionViewGrayFontColor" x:Uid="Neutral-40">#605D62</Color>
    <Color x:Key="CollectionViewBoldGrayFontColor" x:Uid="NeutralVariant-30">#49454F</Color>
    <Color x:Key="CollectionViewItemBorderColor">#21130230</Color>
    <Color x:Key="CollectionViewItemFontColor" x:Uid="Neutral-10">#1C1B1F</Color>
    <Color x:Key="CollectionViewStrikedItemFontColor">#989898</Color>
    <Color x:Key="CollectionViewUrgentItemBackgroundColor" x:Uid="Secondary-90">#E8DEF8</Color>

    
    <Color x:Key="GridCustomAppearanceOddRowBackgroundColor">#F7F7F7</Color>
    <Color x:Key="GridCustomAppearanceFontColor">#55575C</Color>
    <Color x:Key="GridCustomAppearancePositiveFontColor">#00AE00</Color>
    <Color x:Key="GridCustomAppearanceNegativeFontColor">#FF5458</Color>

    
    <Style TargetType="Slider">
        <Setter Property="ThumbColor" Value="{DynamicResource AccentColor}" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{DynamicResource AccentColor}" />
    </Style>

    <Style x:Key="SwitchStyle-iOS" TargetType="Switch">
        <Setter Property="OnColor" Value="{DynamicResource AccentColor}" />
    </Style>

    <Style x:Key="SwitchStyle-Android" TargetType="Switch">
        <Setter Property="ThumbColor" Value="{DynamicResource AccentColor}" />
    </Style>

    <Style TargetType="Switch">
        <Style.BasedOn>
            <OnPlatform x:TypeArguments="Style">
                <On Platform="iOS" Value="{StaticResource SwitchStyle-iOS}" />
                <On Platform="Android" Value="{StaticResource SwitchStyle-Android}" />
            </OnPlatform>
        </Style.BasedOn>
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="HorizontalOptions" Value="End" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{DynamicResource AccentColor}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource BackgroundThemeColor}" />
        <Setter Property="BarTextColor" Value="{StaticResource TextThemeColor}" />
    </Style>
</ResourceDictionary>
